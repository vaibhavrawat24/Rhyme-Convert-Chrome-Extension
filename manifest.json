{
    "manifest_version": 3,
    "name": "Rhymeify",
    "version": "1.0",
    "description": "Turns headlines into rhymes on Indian newspaper sites.",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "background": {
        "service_worker": "background.js"  
      },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://www.hindustantimes.com/world-news/asim-jamil-death-asim-jamil-son-of-renowned-islamic-scholar-maulana-tariq-jamil-dies-report-101698599008675.html"
    ]
  }
  